        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/input_field_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/input_field_padding">

                <TextView
                    android:id="@+id/tvCompanyIDUpload"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_company_id"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload your company ID"
                    android:textColor="@color/input_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCompanyIDUpload"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_upload" />

                <TextView
                    android:id="@+id/tvIsCompanyIDUploadMandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ID"
                    android:textColor="@color/input_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnUploadDocDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/double_general_padding_margin"
            android:background="@drawable/custom_rect"
            android:text="Done"
            android:textColor="@android:color/white" />


    </LinearLayout>
</ScrollView>