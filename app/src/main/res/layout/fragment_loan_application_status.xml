<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgApplicationStatus"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/tvLoanStatusHeader"
        android:layout_marginTop="@dimen/input_field_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thank You"
        android:textSize="@dimen/medium_text"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/input_color"/>

    <TextView
        android:id="@+id/tvLoanApplicationStatusDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/input_field_margin"
        android:textColor="@color/text_color"
        android:textSize="@dimen/small_text" />
</LinearLayout>