<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_introduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewPagerCountDots"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp" />

    <LinearLayout
        android:id="@+id/viewPagerCountDots"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/btn_get_started"
        android:gravity="center"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/btn_get_started"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/general_padding_margin"
        android:background="@drawable/round_button"
        android:paddingLeft="@dimen/double_general_padding_margin"
        android:paddingRight="@dimen/double_general_padding_margin"
        android:text="@string/ob_get_started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible" />


</RelativeLayout>

